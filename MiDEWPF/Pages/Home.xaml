<Page x:Class="MiDEWPF.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MiDEWPF.Pages"
      xmlns:local1="clr-namespace:MiDEWPF"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1400"
      Title="Home"
      >

    <Page.Resources>
        <local1:MiDEDataSet x:Key="mideDataSet"/>
        <CollectionViewSource x:Key="buildingMenuViewSource" Source="{Binding MiDEBuildings, Source={StaticResource mideDataSet}}"/>
        <CollectionViewSource x:Key="sFactorViewSource" Source="{Binding MiDESValues, Source={StaticResource mideDataSet}}"/>
        <CollectionViewSource x:Key="sGFactorViewSource" Source="{Binding MiDEStrategyGroups, Source={StaticResource mideDataSet}}"/>
        <CollectionViewSource x:Key="eFactorViewSource" Source="{Binding MiDEEValues, Source={StaticResource mideDataSet}}"/>
    </Page.Resources>

    <Grid Margin="5,5,5,5" Width="{Binding Path=ViewportWidth}">
        <TextBox HorizontalAlignment="Center" Height="61" Margin="10,13,10,0" TextAlignment="Center" FontSize="30" Text="MiDE Scenario Builder" VerticalAlignment="Top" Width="1370"/>
        <TextBox HorizontalAlignment="Left" Height="32" Margin="60,102,0,0" TextAlignment="Center" Text="Scenario Options" VerticalAlignment="Top" Width="766"/>
        <!-- Stack Panel to Display Labels -->
        <StackPanel HorizontalAlignment="Left" Height="179" Margin="60,177,0,0" VerticalAlignment="Top" Width="298">
            <TextBlock HorizontalAlignment="Left" Margin="0,15,0,0" TextWrapping="Wrap" Text="Vacating Building"/>
            <TextBlock HorizontalAlignment="Left" Margin="0,15,0,0" TextWrapping="Wrap" Text="Occupying Building" VerticalAlignment="Top"/>
            <TextBlock HorizontalAlignment="Left" Margin="0,15,0,0" TextWrapping="Wrap" Text="Expected Move Date" VerticalAlignment="Top"/>
            <TextBlock HorizontalAlignment="Left" Margin="0,15,0,0" TextWrapping="Wrap" Text="Compression Factors" VerticalAlignment="Top"/>
            <CheckBox  HorizontalAlignment="Left" Margin="0,15,0,0" Content="Constrain Budget" IsChecked="True"/>
        </StackPanel>
        <!-- Stack Panel for Various Selection Boxes-->
        <StackPanel x:Name="inputOptions" HorizontalAlignment="Left" Height="179" VerticalAlignment="Top" Width="619" Margin="180,177,0,0" >
            <Menu Name="buildingMenu" HorizontalAlignment="Left" RenderTransformOrigin="-1.937,1.76" Height="20" Margin="0,10,0,0" Width="200">
                <MenuItem ItemsSource="{Binding Source={StaticResource buildingMenuViewSource}}" DisplayMemberPath="BuildingName" >
                    <!-- <MenuItem ItemsSource="{Binding Path=Cafes}" DisplayMemberPath="CafeName" CommandParameter="CafeName"> -->
                    <MenuItem.Resources>
                        <Style TargetType="{x:Type MenuItem}">
                            <Setter Property="Command" Value="{Binding Path=Command}"/>
                        </Style>
                    </MenuItem.Resources>
                    <MenuItem.Header>

                        <StackPanel Orientation="Horizontal">
                            <Label Padding="0" Width="180">_Select a Building</Label>
                            <Border>
                                <!-- The toggle button looks identical to the one used on a combo box because I based the definition below on the relevant portion of the  combo box's default control template. -->
                                <ToggleButton IsChecked="False" IsHitTestVisible="False" BorderBrush="{TemplateBinding Border.BorderBrush}" Background="{TemplateBinding Panel.Background}">
                                    <ToggleButton.Style>
                                        <Style TargetType="{x:Type ToggleButton}">
                                            <Setter Property="OverridesDefaultStyle" Value="True" />
                                            <!-- The toggle control just needs visually appear. It doesn't  need to receive focus or be a tab stop. -->
                                            <Setter Property="Focusable" Value="False" />
                                            <Setter Property="IsTabStop" Value="False" />
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                        <Path Data="M0,0L3.5,4 7,0z" Fill="#FF000000" x:Name="Arrow" Margin="3,1,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                            </Border>
                        </StackPanel>
                    </MenuItem.Header >
                </MenuItem>
            </Menu>
            <ComboBox Name="selectBuildingCB" Text="Select Building" Margin="0,10,0,0" Width="200" IsEditable="True" IsReadOnly="True" Height="20" HorizontalAlignment="Left" 
                     ItemsSource="{Binding Source={StaticResource buildingMenuViewSource}, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}" 
                      DisplayMemberPath="BuildingName" SelectedValuePath="BuildingName" SelectionChanged="selectBuildingCB_SelectionChanged"/>
            <DatePicker Name="datePicker" Margin="0,10,0,0" VerticalAlignment="Top" Width="200" HorizontalAlignment="Left" SelectedDateChanged="DatePicker_SelectedDateChanged" />
            <ComboBox Name="sFactorCB" Text="Compression Factors" Margin="0,10,0,0" Width="600" IsEditable="True" IsReadOnly="True" HorizontalAlignment="Left"
                      ItemsSource="{Binding Source={StaticResource sFactorViewSource}, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}" 
                      DisplayMemberPath="svariable" SelectedValuePath="svariable" SelectionChanged="sFactors_SelectionChanged"/>
        </StackPanel>
        <!-- List box and label for Current Selections -->
        <TextBox HorizontalAlignment="Right" Height="32" Margin="981,102,60,0" TextAlignment="Center" Text="Current Input Selections" VerticalAlignment="Top" Width="399"/>
        <ListBox Name="selectionListBox" HorizontalAlignment="Right" Height="179" Margin="981,177,60,0" VerticalAlignment="Top" Width="399" 
                 ItemsSource="{Binding Path=SelectionArray}" DisplayMemberPath="{Binding Path=SelectionArray}"/>
        <ListBox Name="exclusionSelectionListBox" HorizontalAlignment="Right" Height="179" Margin="981,514,60,0" VerticalAlignment="Top" Width="399" 
                 ItemsSource="{Binding Path=SelectionArray}" DisplayMemberPath="{Binding Path=SelectionArray}"/>
        
        <StackPanel HorizontalAlignment="Left" Height="179" Margin="60,514,0,0" VerticalAlignment="Top" Width="293">
            <TextBlock HorizontalAlignment="Left" Margin="0,15,0,0" TextWrapping="Wrap" Text="Strategy Exclusions"/>
            <TextBlock HorizontalAlignment="Left" Margin="0,15,0,0" TextWrapping="Wrap" Text="Mitigation Exclusions" VerticalAlignment="Top"/>
        </StackPanel>

        <TextBox HorizontalAlignment="Right" Height="32" Margin="981,450,60,0" TextAlignment="Center" Text="Current Exclusion Selections" VerticalAlignment="Top" Width="399"/>
        <StackPanel HorizontalAlignment="Right" Height="330" Margin="981,401,60,0" VerticalAlignment="Top" Width="399"/>

        <TextBox HorizontalAlignment="Left" Height="32" Margin="60,450,100,0" TextAlignment="Center" Text="Scenario Options" VerticalAlignment="Top" Width="766"/>
        <StackPanel x:Name="exclusionOptions" HorizontalAlignment="Left" Height="179" VerticalAlignment="Top" Width="619" Margin="180,514,0,0" >
            
            <ComboBox Name="strategyExclusionCB" Text="Exclusions" Margin="0,10,0,0" Width="200" IsEditable="True" IsReadOnly="True" Height="20" HorizontalAlignment="Left" 
                      ItemsSource="{Binding Source={StaticResource sGFactorViewSource}, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}" 
                      DisplayMemberPath="strategyname" SelectedValuePath="strategyname" SelectionChanged="selectExclusionCB_SelectionChanged"/>
            
            <ComboBox Name="mitigationExclusionCB" Text="Exclusions" Margin="0,10,0,0" Width="600" IsEditable="True" IsReadOnly="True" HorizontalAlignment="Left"
                      ItemsSource="{Binding Source={StaticResource eFactorViewSource}, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}" 
                      DisplayMemberPath="evariable" SelectedValuePath="evariable" SelectionChanged="mitigationExclusion_SelectionChanged"/>
        </StackPanel>

        <Button Content="Save" HorizontalAlignment="Right" Margin="1138,760,5,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.493,0.571"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="20,760,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.493,0.571"/>
        
    </Grid>
</Page>
