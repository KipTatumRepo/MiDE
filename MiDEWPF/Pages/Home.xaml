<Page x:Class="MiDEWPF.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MiDEWPF.Pages"
      xmlns:local1="clr-namespace:MiDEWPF"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1400"
      Title="Home"
      >

    <Page.Resources>
        <local1:MiDEDataSet x:Key="mideDataSet"/>
        <CollectionViewSource x:Key="buildingMenuViewSource" Source="{Binding MiDEBuildings, Source={StaticResource mideDataSet}}"/>
        <CollectionViewSource x:Key="populationViewSource" Source="{Binding MiDEPopulation, Source={StaticResource mideDataSet}}"/>
        <CollectionViewSource x:Key="sFactorViewSource" Source="{Binding MiDESValues, Source={StaticResource mideDataSet}}"/>
        <CollectionViewSource x:Key="sGFactorViewSource" Source="{Binding MiDEStrategyGroups, Source={StaticResource mideDataSet}}"/>
        <CollectionViewSource x:Key="eFactorViewSource" Source="{Binding MiDEEValues, Source={StaticResource mideDataSet}}"/>

    </Page.Resources>

    <Grid Margin="5,5,5,5" Width="{Binding Path=ViewportWidth}">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height=".15*"/>
        </Grid.RowDefinitions>

        <TextBox HorizontalAlignment="Center" Height="61" Margin="10,13,10,0" TextAlignment="Center" FontSize="30" Text="MiDE Scenario Builder" VerticalAlignment="Top" Width="1370" Background="LemonChiffon"/>
        <TextBox HorizontalAlignment="Left" Height="32" Margin="60,102,0,0" TextAlignment="Center" Text="Scenario Options" VerticalAlignment="Top" Width="766" Background="LemonChiffon"/>
        <!-- Stack Panel to Display Labels -->
        <StackPanel HorizontalAlignment="Left" Height="179" Margin="60,177,0,0" VerticalAlignment="Top" Width="298">
            <TextBlock HorizontalAlignment="Left" Margin="0,15,0,0" TextWrapping="Wrap" Text="Vacating Building"/>
            <TextBlock HorizontalAlignment="Left" Margin="0,15,0,0" TextWrapping="Wrap" Text="Occupying Building" VerticalAlignment="Top"/>
            <TextBlock HorizontalAlignment="Left" Margin="0,15,0,0" TextWrapping="Wrap" Text="Expected Move Date" VerticalAlignment="Top"/>
            <TextBlock HorizontalAlignment="Left" Margin="0,15,0,0" TextWrapping="Wrap" Text="Compression Factors" VerticalAlignment="Top"/>
            <CheckBox  HorizontalAlignment="Left" Margin="0,15,0,0" Content="Constrain Budget" IsChecked="True"/>
        </StackPanel>
        <!-- Stack Panel for Various Selection Boxes-->
        <StackPanel x:Name="inputOptions" HorizontalAlignment="Left" Height="179" VerticalAlignment="Top" Width="619" Margin="180,177,0,0" >

            <Menu x:Name="buildingMenu" Margin="0,15,0,0" HorizontalAlignment="Left" Height="20" Width="200" ItemsSource="{Binding MenuItems}" MouseDoubleClick="buildingMenu_MouseDoubleClick"  >
            <Menu.ItemContainerStyle>
                    <Style TargetType="{x:Type MenuItem}">
                        <Setter Property="Command" Value="{Binding Command}" />
                    </Style>
                </Menu.ItemContainerStyle>
            <Menu.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Path=MenuItems}">
                    <TextBlock Text="{Binding Header}"/>
                </HierarchicalDataTemplate>
            </Menu.ItemTemplate>
            </Menu>

            <ComboBox x:Name="selectBuildingCB" Text="Select Building" Margin="0,10,0,0" Width="200" IsEditable="True" IsReadOnly="True" Height="20" HorizontalAlignment="Left" 
                     ItemsSource="{Binding NotifyOnSourceUpdated=True, Source={StaticResource buildingMenuViewSource}, UpdateSourceTrigger=PropertyChanged}" 
                      DisplayMemberPath="BuildingName" SelectedValuePath="BuildingName" SelectionChanged="selectBuildingCB_SelectionChanged"/>
            <DatePicker x:Name="datePicker" Margin="0,10,0,0" VerticalAlignment="Top" Width="200" HorizontalAlignment="Left" SelectedDateChanged="DatePicker_SelectedDateChanged" />
            <ComboBox x:Name="sFactorCB" Text="Compression Factors" Margin="0,10,0,0" Width="600" IsEditable="True" IsReadOnly="True" HorizontalAlignment="Left"
                      ItemsSource="{Binding NotifyOnSourceUpdated=True, Source={StaticResource sFactorViewSource}, UpdateSourceTrigger=PropertyChanged}" 
                      DisplayMemberPath="svariable" SelectedValuePath="svariable" SelectionChanged="sFactors_SelectionChanged"/>

        </StackPanel>
        <!-- List box and label for Current Selections -->
        <TextBox HorizontalAlignment="Right" Height="32" Margin="0,102,55,0" TextAlignment="Center" Text="Current Input Selections" VerticalAlignment="Top" Width="500" Background="LemonChiffon"/>
        <ListBox Name="selectionListBox" HorizontalAlignment="Right" Height="179" Margin="0,177,55,0" VerticalAlignment="Top" Width="500" />
        <!--ItemsSource="{Binding Path=SelectionArray}" DisplayMemberPath="{Binding Path=SelectionArray}"/>-->

        <StackPanel HorizontalAlignment="Left" Height="179" Margin="60,450,0,0" VerticalAlignment="Top" Width="293">
            <TextBlock HorizontalAlignment="Left" Margin="0,15,0,0" TextWrapping="Wrap" Text="Strategy Exclusions"/>
            <TextBlock HorizontalAlignment="Left" Margin="0,15,0,0" TextWrapping="Wrap" Text="Mitigation Exclusions" VerticalAlignment="Top"/>
        </StackPanel>

        <TextBox HorizontalAlignment="Left" Height="32" Margin="60,400,100,0" TextAlignment="Center" Text="Scenario Options" VerticalAlignment="Top" Width="766" Background="LemonChiffon"/>
        <StackPanel x:Name="exclusionOptions" HorizontalAlignment="Left" Height="179" VerticalAlignment="Top" Width="619" Margin="180,450,0,0" >
            <ComboBox Name="strategyExclusionCB" Text="Exclusions" Margin="0,10,0,0" Width="200" IsEditable="True" IsReadOnly="True" Height="20" HorizontalAlignment="Left" 
                      ItemsSource="{Binding Source={StaticResource sGFactorViewSource}, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}" 
                      DisplayMemberPath="strategyname" SelectedValuePath="strategyname" SelectionChanged="selectExclusionCB_SelectionChanged"/>

            <ComboBox Name="mitigationExclusionCB" Text="Exclusions" Margin="0,10,0,0" Width="600" IsEditable="True" IsReadOnly="True" HorizontalAlignment="Left"
                      ItemsSource="{Binding Source={StaticResource eFactorViewSource}, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}" 
                      DisplayMemberPath="evariable" SelectedValuePath="evariable" SelectionChanged="mitigationExclusion_SelectionChanged"/>
        </StackPanel>

        <TextBox HorizontalAlignment="Right" Height="32" Margin="0,400,55,0" TextAlignment="Center" Text="Current Exclusion Selections" VerticalAlignment="Top" Width="500" Background="LemonChiffon"/>
        <ListBox Name="exclusionSelectionListBox" HorizontalAlignment="Right" Height="163" Margin="0,450,55,0" VerticalAlignment="Top" Width="500" />
        <!--ItemsSource="{Binding Path=SelectionArray}" DisplayMemberPath="{Binding Path=SelectionArray}"/>-->

        <Button Grid.Row="1" Content="Cancel" HorizontalAlignment="Left" Margin="60,20,0,20" Style="{StaticResource Buttons}" Height="Auto" />
        <Button Grid.Row="1" Content="Save" HorizontalAlignment="Right" Margin="0,20,60,20" Style="{StaticResource Buttons}" Height="Auto" Click="Button_Click" />

    </Grid>
</Page>
